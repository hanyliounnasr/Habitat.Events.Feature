@using Sitecore.Feature.Events
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Repositories
@model Sitecore.Feature.Events.Models.EventItems

<ul class="media-list media-list-divided">
@foreach (var item in Model.Items)
{
  <li class="media media-align-middle">
    <div class="media-left ">
      <a href="@item.Url()">
        @Html.Sitecore().ImageField(Templates.EventDetails.Fields.Image.ToString(), item, mw: 150)
      </a>
    </div>

    <div class="media-body ">
      <h3 class="media-title">
        <a href="@item.Url()">
          @Html.Sitecore().Field(Templates.EventDetails.Fields.Title.ToString(), item)
        </a>
      </h3>
      <p>
        @Html.Sitecore().Field(Templates.EventDetails.Fields.Summary.ToString(), item)
      </p>
    </div>
    <div class="media-right">
      <div class="label label-info">
        @Html.Sitecore().Field(Templates.EventDetails.Fields.Date.ToString(), item, new
 {
   format = "MMMM dd, yyyy"
 })
      </div>
    </div>
	<p>
	<a href="@item.Url()" class="btn btn-default">
                    @DictionaryRepository.Get("/Events/Read more", "Read more")
                </a>
	</p>
  </li>
}
</ul>